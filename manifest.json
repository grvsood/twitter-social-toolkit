{
  "manifest_version": 2,

  "name": "Twitter Social Toolkit",
  "description": "Easy Share on Twitter",
  "version": "1.0",

  "browser_action": {
    "default_icon": "twitter128.png",
    "default_popup": "popup.html"
  },
  "icons":{
    "64" : "twitter64.png",
    "32" : "twitter32.png",
    "16" : "twitter16.png",
    "128" : "twitter128.png"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions":[
    "contextMenus"
  ]

}
